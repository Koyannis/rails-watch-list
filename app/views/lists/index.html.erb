<div class="banner" style="">
    <%= video_tag 'movie_projector.mp4', autoplay: :autoplay, loop: :loop, muted: :muted, id: "background-video" %>
    <div class="container">
    <h1>My Movies Lists</h1>
  </div>
</div>

<div class="container-fluid d-flex cards">
  <% @lists.each do |list|  %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
      <h2><%= link_to list.name, list_path(list) %></h2>
      <p>  <%= list.movies.count %> films</p>
      </div>
    </div>
  <% end  %>
</div>
